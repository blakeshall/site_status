<div ng-app="Sites">
  <div class="row">
    <div class="col-md-6" ng-controller="SitesCtrl">
      <table class="table">
        <caption>Sites</caption>
        <thead>
          <tr>
            <th>Site</th>
            <th>URL</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <tr ng-repeat="site in sites">
            <td>{{ site.name }}</td>
            <td>{{ site.url }}</td>
            <td>{{ site.status }}</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
